{
  "name": "always-on-top-countdown",
  "version": "1.0.0",
  "description": "Cross-platform always-on-top countdown timer (Electron)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --win --mac --linux"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.example.countdown",
    "productName": "AlwaysOnTopCountdown",

    "win": {
      "target": ["nsis"]
    },

    "mac": {
      "target": ["AppImage", "dmg"]
    },

    "linux": {
      "target": ["AppImage", "deb"]
    },

    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
